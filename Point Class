//Work in progress

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Mission_Mapping
{
    class Point
    {
        public string name;
        public double latitude;
        public string latNS;
        public double longitude;
        public string longEW;

        public Point()
        {
            this.name = "Unk";
            this.latitude = 0;
            this.latNS = "Unk";
            this.longitude = 0;
            this.longEW = "Unk";
        }

        public Point(string newName)
        {
            this.name = newName;
            this.latitude = 0;
            this.latNS = "Unk";
            this.longitude = 0;
            this.longEW = "Unk";
        }

        public Point(string newName, double newLatitude, string NS)
        {
            this.name = newName;
            this.latitude = newLatitude;
            this.latNS = NS;
            this.longitude = 0;
            this.longEW = "Unk";
        }

        public Point(string newName, double newLatitude, string NS, double newLongitude, string EW)
        {
            this.name = newName;
            this.latitude = newLatitude;
            this.latNS = NS;
            this.longitude = newLongitude;
            this.longEW = EW;
        }

        public void Rename(string newName)
        {
            this.name = newName;
        }
    }
}
