//Work in progress

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Mission_Mapping
{
    class Line
    {
        public string name;
        public double latitude1;
        public string lat1NS;
        public double longitude1;
        public string long1EW;
        public double latitude2;
        public string lat2NS;
        public double longitude2;
        public string long2EW;

        public Line()
        {
            this.name = "Unk";
            this.latitude1 = 0;
            this.lat1NS = "Unk";
            this.longitude1 = 0;
            this.long1EW = "Unk";
        }

        public Line(string newName)
        {
            this.name = newName;
            this.latitude1 = 0;
            this.lat1NS = "Unk";
            this.longitude1 = 0;
            this.long1EW = "Unk";
        }

        public Line(string newName, double newLatitude, string NS)
        {
            this.name = newName;
            this.latitude1 = newLatitude;
            this.lat1NS = NS;
            this.longitude1 = 0;
            this.long1EW = "Unk";
        }

        public Line(string newName, double newLatitude, string NS, double newLongitude, string EW)
        {
            this.name = newName;
            this.latitude1 = newLatitude;
            this.lat1NS = NS;
            this.longitude1 = newLongitude;
            this.long1EW = EW;
        }

        public Line(string newName, double newLatitude1, string NS1, double newLongitude1, string EW1, double newLatitude2, string NS2, double newLongitude2, string EW2)
        {
            this.name = newName;
            this.latitude1 = newLatitude1;
            this.lat1NS = NS1;
            this.longitude1 = newLongitude1;
            this.long1EW = EW1;
            this.latitude2 = newLatitude2;
            this.lat2NS = NS2;
            this.longitude2 = newLongitude2;
            this.long2EW = EW2;
        }

        public void Rename(string newName)
        {
            this.name = newName;
        }
    }
}
